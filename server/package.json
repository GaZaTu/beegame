{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "main": "build/browser.js",
  "types": "build/browser.d.ts",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "build-watch": "tsc --watch",
    "nodemon": "nodemon",
    "nodemon-ts": "nodemon --watch src --ext ts --exec ts-node --ignore '*.test.ts' src/index.ts",
    "nodemon-js": "nodemon --watch build --ext js --ignore '*.test.js' build/index.js"
  },
  "dependencies": {
    "@colyseus/schema": "^0.5.41",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "arraybuffer-to-buffer": "0.0.7",
    "colyseus": "^0.13.7",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "excalibur": "^0.24.3",
    "express": "^4.17.1",
    "kill-port": "^1.6.1",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "wrtc": "^0.4.6",
    "ws": "^7.3.1"
  },
  "nodemonConfig": {
    "watch": [
      "build"
    ],
    "ext": "js",
    "ignore": [
      "*.test.js"
    ],
    "signal": "SIGTERM",
    "exec": "npm run start"
  }
}
